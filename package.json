{
  "name": "test-service",
  "version": "0.1.0",
  "description": "JOIN service template",
  "repository": "git@github.com:SerhiiK/dependatabot",
  "author": "serhii",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^16.2.0"
  },
  "dependencies": {
    "@coderspirit/nominal": "^3.2.1",
    "@join-com/gcloud-logger-trace": "^0.4.3",
    "@join-com/grpc": "^3.0.1",
    "@join-com/node-trace": "^0.4.0",
    "@join-com/process-env": "^1.2.0",
    "@join-com/pubsub": "^1.0.3",
    "@join-com/shutdown": "^1.0.2",
    "@join-private/base-errors": "^1.3.0",
    "@join-private/grpc-error-handler": "^1.0.0",
    "@join-private/instrumentation-node": "^1.6.0",
    "@join-private/validate-required": "^1.3.0",
    "express": "^4.17.3",
    "module-alias": "^2.2.2",
    "pg": "^8.7.3",
    "prom-client": "^14.0.1",
    "protobufjs": "^6.11.2",
    "source-map-support": "^0.5.21",
    "typeorm": "^0.3.5"
  },
  "devDependencies": {
    "@join-com/jest-matchers": "^1.0.4",
    "@join-private/eslint-config-backend": "^1.1.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/module-alias": "^2.0.1",
    "@types/source-map-support": "^0.5.4",
    "@types/supertest": "^2.0.11",
    "env-cmd": "^10.1.0",
    "eslint": "^8.12.0",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jest-mock": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typeorm-factory": "^0.0.14",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "build": "tsc -p tsconfig.base.json",
    "env:dev": "env-cmd -e defaults",
    "env:test": "env-cmd -e defaults,test",
    "env:ci": "env-cmd -e defaults,ci --no-override",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "yarn lint --fix",
    "lint:strict": "yarn tsc --noEmit && yarn lint",
    "makepretty": "prettier --write -l '**/*.ts'",
    "test": "yarn env:test jest --runInBand",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn env:ci jest --ci --runInBand",
    "proto:clean": "find src/api/grpc/proto/generated ! -name '.prettierrc' -type f -exec rm -f {} +",
    "proto:generate": "protoc src/api/grpc/proto/*.proto -I src/api/grpc/proto --tsx_out=src/api/grpc/proto/generated",
    "proto:pretty": "yarn prettier --write 'src/api/grpc/proto/generated/**/*.ts'",
    "proto:build": "yarn proto:clean && yarn proto:generate && yarn proto:pretty",
    "proto:client:clean": "rm -rf ./packages/client-grpc/protoGenerated/*",
    "proto:client:copy": "cp -R src/api/grpc/proto/generated/ packages/client-grpc/protoGenerated/",
    "proto:client:build": "yarn proto:client:clean && yarn proto:client:copy",
    "pubsub:client:build": "cp -R ./src/infrastructure/events/pubSubClient/. ./packages/client-pubsub/",
    "postinstall": "if [ -d .git ]; then git config core.hooksPath .hooks; fi",
    "typeorm:ci": "yarn env:ci ts-node ./node_modules/.bin/typeorm",
    "typeorm:dev": "yarn env:dev ts-node ./node_modules/.bin/typeorm",
    "typeorm:test": "yarn env:test ts-node ./node_modules/.bin/typeorm",
    "typeorm:prod": "./node_modules/.bin/typeorm",
    "db:migrations:generate": "yarn typeorm:dev migration:generate -d src/infrastructure/repositories/config.ts",
    "db:migrate": "yarn typeorm:dev migration:run -d src/infrastructure/repositories/config.ts",
    "db:migrate:revert": "yarn typeorm:dev migration:revert -d src/infrastructure/repositories/config.ts"
  },
  "_moduleAliases": {
    "@api": "dist/api",
    "@application": "dist/application",
    "@infrastructure": "dist/infrastructure",
    "@shared": "dist/shared",
    "@proto": "dist/api/grpc/proto/generated"
  }
}
